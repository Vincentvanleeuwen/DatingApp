{{#> layouts/main }}

<section class=register-main>
    <div class="register-container">
        <form method="post" action="/match" enctype="multipart/form-data">
            <fieldset>
                <h1>MAKE ACCOUNT</h1>
                <label for="name">First Name</label>
                <input type="text" name="firstName" id="name" minlength="2" maxlength="25" required>
                <p class="errorMessage" id="error-name"></p>
            
                <label for="email">Email</label>
                <input type="email" name="email" id="email" required>
                <p class="errorMessage" id="error-email"></p>


                <label for="password">Password</label>
                <input type="password" name="password" id="password">
                <p class="errorMessage" id="error-password"></p>

                <div class="btn-next-container">
                    <div type="button" class="btn-next">Next</div>
                </div>
            </fieldset>

            <fieldset>
                <h1>LET'S BEGIN</h1>
                <label for="birthday">Birthday</label>
                <input type="date" name="birthday" id="birthday">
                <p class="errorMessage" id="error-birthday"></p>

                <label for="gender">Your Gender</label>
                <ul class="gender-container">
                    <li>
                        <input type="radio" id="male" name="gender" value="male" required>
                        <label for="male">Male</label>
                    </li>

                    <li>
                        <input type="radio" id="female" name="gender" value="female" required>
                        <label for="female">Female</label>
                    </li>
                </ul>
                <p class="errorMessage" id="error-gender"></p>


                <label for="preference">Looking for</label>
                <ul class="gender-container">
                    <li>
                        <input type="checkbox" id="pref-male" name="preference" value="male">
                        <label for="pref-male">Male</label>
                    </li>

                    <li>
                        <input type="checkbox" id="pref-female" name="preference" value="female">
                        <label for="pref-female">Female</label>
                    </li>
                </ul>
                <p class="errorMessage" id="error-preference"></p>

                <div class="btn-next-container">
                    <button type="button" class="btn-previous">Back</button>
                    <button type="button" class="btn-next">Next</button>
                </div>
            </fieldset>

            <fieldset>
                <h1>PROFILE PICTURE</h1>
                <label for="profilePicture"></label>
                <input type="file" id="img" name="profilePicture" accept="image/*" required>
                <p class="errorMessage" id="error-profilePicture"></p>

                <div class="btn-next-container">
                    <button type="button" class="btn-previous">Back</button>
                    <button type="button" class="btn-next">Next</button>
                </div>
            </fieldset>

            <fieldset>
                <h1>DESCRIBE YOURSELF</h1>
                <label for="description">Describe yourself</label>
                <textarea name="description" rows="6" cols="50" required></textarea>

                <div class="btn-submit-container">
                    <button type="button" class="btn-previous">Back</button>
                    <button type="submit" class="btn-next">Next</button>
                </div>
            </fieldset>
        </form>
    </div>
</section>

{{/layouts/main}}