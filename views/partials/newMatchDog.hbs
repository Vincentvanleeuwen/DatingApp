<section class="dog-container">

  <section class="dog-image">

    <img src="../../public/media/images/dogs/{{ images.[0].originalname }}"
         alt="Bobby"
         class="main-image">

  </section>

  <section class="dog-bio">

    <h2 class="dog-name">You matched {{ name }} </h2>

    <section class="dog-desktop">
        {{!-- <a class="newmatchBtn" href="/match">Keep looking</a>

        <a class="newmatchBtn2" href="/matches">chat now!</a> --}}

      <section class="log-in-container">

        <form action="/matches/{{ id }}/chat" method="post" class="log-in-form">

          <label for="email" style="display:none">
            <input type="text" value="{{ email }}" name="email">
          </label>

          <input type="submit" value="" class="log-in-button">

        </form>

        <form action="/match" method="post" class="log-in-form">

          <label for="email" style="display:none">
            <input type="text" value="{{email}}" name="email">
          </label>

          <input type="submit" value="" class="log-in-button">

        </form>
 

      </section>

    </section>

  </section>


  <section class="more-details">

    <img src="../../public/media/images/arrowdown.svg"
         alt="More Details">

  </section>

</section>